<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_comidas_2_branco"
    tools:context=".TelaDoUsuario">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtOlaUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/ubuntubolditalic"
        android:text="@string/ol_usu_rio"
        android:textColor="@color/marrom"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttGerCardapio"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="168dp"
        android:layout_marginBottom="169dp"
        android:text="@string/gerenciar_card_pio"
        android:textAllCaps="false"
        app:backgroundTint="@color/amarelo_forte"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/bttGerUsuario"
        app:layout_constraintEnd_toEndOf="@+id/bttVisCardapio"
        app:layout_constraintStart_toStartOf="@+id/bttVisCardapio"
        app:layout_constraintTop_toBottomOf="@+id/txtCadastro" />

    <Button
        android:id="@+id/bttVisCardapio"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/visualizar_card_pio"
        android:textAllCaps="false"
        app:backgroundTint="@color/amarelo_forte"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bttGerUsuario"
        app:layout_constraintStart_toStartOf="@+id/bttGerUsuario"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttGerUsuario"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:text="@string/configurar_usu_rio"
        android:textAllCaps="false"
        app:backgroundTint="@color/amarelo_forte"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttVisCardapio" />


    <Button
        android:id="@+id/bttLogout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="68dp"
        android:text="@string/sair"
        android:textAllCaps="false"
        app:backgroundTint="@color/vermelho"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bttGerUsuario"
        app:layout_constraintStart_toStartOf="@+id/bttGerUsuario" />


</androidx.constraintlayout.widget.ConstraintLayout>